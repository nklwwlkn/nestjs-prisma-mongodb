{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@dtos/*": ["./src/dtos/*"],
      "@decorators/*": ["./src/decorators/*"],
      "@orders/*": ["./src/orders/*"]
    }
  },
  "minify": false
}
